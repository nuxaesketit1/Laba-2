#include <iostream>
#include <string>
#include <cmath>
using namespace std;
int main()
{
	double A, B, C, AC, BC, temp;

	cout << "Enter 3 numbers on the numeric axis : " << endl;
	cin >> A >> B >> C;

	double m[3]{ A,B,C };
	for (int j = 0; j < 3; j++)
	{
		for (int i = 0; i < 2; i++)
		{
			if (m[i] > m[i + 1])
			{
				temp = m[i];
				m[i] = m[i + 1];
				m[i + 1] = temp;
			}
		}
	}

	AC = m[2] - m[0];
	BC = m[2] - m[1];
	if (AC < 0) AC = AC * -1;
	if (BC < 0) BC = BC * -1;

	cout << "Cut length AC : " << AC << endl;
	cout << "Cut length BC : " << BC << endl;
	cout << "Sum of segments : " << AC + BC << endl;

	cout << endl;

	system("pause");

	return 0;
}
